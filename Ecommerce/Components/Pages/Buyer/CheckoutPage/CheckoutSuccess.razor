@page "/checkout/success"
@inject ILocalStorageService LocalStorage
@layout Buyer
@rendermode InteractiveServer

<div class="container my-5 text-center">
    <div class="card rounded-3 border-0 p-4 shadow-lg">
        <div class="card-body">
            <!-- Icon thành công -->
            <div class="mb-4">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
            </div>

            <!-- Tiêu đề -->
            <h2 class="fw-bold text-success">Thanh toán thành công!</h2>
            <p class="text-muted">Cảm ơn bạn đã mua hàng tại <strong>Sonadezi Shop</strong>. Đơn hàng của bạn đang được xử lý.</p>

            <!-- Thông tin đơn hàng -->
            <div class="alert alert-light mx-auto mt-4 border text-start" style="max-width: 500px;">
                <h5 class="fw-bold mb-3">Thông tin đơn hàng</h5>
                <p><strong>Mã đơn hàng:</strong> #@OrderCode</p>
                <p><strong>Ngày đặt:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                <p><strong>Số lượng sản phẩm:</strong> @cart.Sum(x => x.quantity)</p>
                <p><strong>Tổng tiền:</strong> <span class="text-danger fw-bold">@TotalAmount.ToString("N0") VNĐ</span></p>
            </div>

            <!-- Nút hành động -->
            <div class="d-flex justify-content-center mt-4 gap-3">
                <a href="/" class="btn btn-outline-primary px-4">
                    <i class="bi bi-house-door"></i> Về trang chủ
                </a>
                <a href="/" class="btn btn-success px-4">
                    <i class="bi bi-cart-plus"></i> Tiếp tục mua sắm
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    List<CartItem> cart = new();
    string OrderCode = Guid.NewGuid().ToString("N").Substring(0, 8).ToUpper();
    double TotalAmount = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var savedCart = await LocalStorage.GetItemAsync<List<CartItem>>("cart");
            if (savedCart != null)
            {
                cart = savedCart;
                TotalAmount = cart.Sum(x => x.price * x.quantity);
            }

            StateHasChanged();
            // Sau khi checkout thành công thì có thể clear cart
            await LocalStorage.RemoveItemAsync("cart");
        }
    }
}
